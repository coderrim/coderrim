#include <string>
#include <iostream>
using namespace std;

void myaccounts(int* p) {
	for (int i = 0; i < 4; i++) {
		cout << *(p+i) << "  |  " << endl;
	}
}

void total(int* p) {
	for (int j = 0; j < 4; j++) {
		*p = *(p + j);
	}
}

int main() {
	string bank_name[4];
	bank_name[0] = {"하나"};
	bank_name[1] = {"우리"};
	bank_name[2] = {"신한"};
	bank_name[3] = {"국민"};
	int bank[4] = { 5000,4000,0,10 };
	int* a = NULL;
	a= bank;

	int total_money = total(a);

	
	cout << "*************************SWING 자산 관리 서비스***************************" << endl;
	cout << "----------------------------은행 별 계좌정보------------------------------" << endl;
	for (int k= 0; k< 4; k++) {
		cout << bank_name[k] << "  |  " << endl;
	}

	myaccounts(a);
	
	cout << "--------------------------------------------------------------------------" << endl;
	cout << "현재 SWING 자산관리 서비스에 등록된 회원님의 총 자산은" << total_money << "원 입니다." << endl;
	cout << "**************************************************************************" << endl;


}
