#include<iostream>
using namespace std; //std::생략

int main() {
	
	cout << "당신의 이름은 무엇인가요?" << endl; //이름 묻기
	char name0[12]; //배열 크기 12
	cin.getline(name0, 12, '\n'); //공백 포함 문자 입력 받기
	cout << "반갑습니다." << name0 << "님" << endl; //출력

	cout << "  \n"; //공백
	cout << "---------------SWING 30기---------------" << endl;

	cout << "음료의 가격 입력을 시작합니다." << endl; //음료 가격 묻기
	cout << "  \n";
	int coke; //변수 생성
	int samdasu;
	int hwanta;

	cout << "콜라의 가격:";
	cin >> coke; //음료 가격 입력 받기
	cout << "삼다수의 가격:";
	cin >> samdasu;
	cout << "환타의 가격:";
	cin >> hwanta;

	cout << "  \n";
	cout << "개수를 입력해주세요." << endl; //음료 개수 묻기
	cout << "  \n";
	int coke_n; //변수 생성
	int samdasu_n;
	int hwanta_n;

	cout << "콜라의 수량:";
	cin >> coke_n; //음료 개수 입력 받기
	cout << "삼다수의 수량:";
	cin >> samdasu_n;
	cout << "환타의 수량:";
	cin >> hwanta_n;

	int price; //가격 변수 생성
	price = coke * coke_n + samdasu * samdasu_n + hwanta * hwanta_n; //가격*수량의 합

	cout << "---------------------------------------" << endl;
	cout << "500원을 할인받아 총" << (price - 500) << "원입니다." << endl; //500원 할인한 총액 출력

}
